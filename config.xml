<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.jurt0001.secretmessenger" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>secretmessenger</name>
    
    <description>
       This allows user to take photos and embed secret messages in them.
    </description>
    
    <author email="jurt0001@algonquinlive.com" href="https://github.com/jurt0001">
        Christian Jurt/Eric Lachapelle
    </author>
    
    
    <content src="index.html" />
    <preference name="SplashScreen" value="screen"/>
    <preference name="SplashScreenDelay" value="5000"/>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
       
        <allow-intent href="market:*" />
        
